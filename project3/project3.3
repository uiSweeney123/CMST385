body {
  font-family: Verdana, Arial, sans-serif;
  background: #f2f2f2;
  color: #111;
  margin: 0;
  padding: 0;
}

#wrapper {
  width: 90%;
  max-width: 1000px;
  margin: 0 auto;
  background: #fff;
  padding: 20px;
}

header, footer {
  text-align: center;
  padding: 16px;
  background: #eaeaea;
}

h1 {
  text-align: center;
  font-size: 2.2rem;
  color: #222;
  margin: 0;
}

h2 {
  text-align: center;
  font-size: 1.6rem;
  color: #333;
}

p {
  font-size: 1rem;
  line-height: 1.6;
  margin: 12px 0;
}

/* CLASS attribute requirement */
.tagline {
  margin: 8px 0 14px;
  font-style: italic;
}

/* ID attribute requirement */
#thriller {
  border: 2px solid #ddd;
  padding: 12px;
}

nav {
  text-align: center;
  margin-top: 10px;
}

nav a {
  display: inline-block;
  margin: 0 10px;
  text-decoration: none;
  font-weight: bold;
  color: #000;
}

nav a:hover {
  text-decoration: underline;
}

.float-img {
  float: right;
  width: 260px;
  max-width: 100%;
  margin: 0 0 10px 15px;
  padding: 6px;
  border: 1px solid #ccc;
}

.album {
  border-top: 1px solid #ddd;
  padding: 16px 0;
}

.album-cover {
  width: 200px;
  max-width: 100%;
  display: block;
  margin: 10px auto;
  border: 1px solid #ccc;
  padding: 6px;
}

.caption {
  font-size: 0.9rem;
  color: #444;
}

/* Clear floats */
main::after {
  content: "";
  display: block;
  clear: both;
}